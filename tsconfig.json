{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "lib": [
      "esnext"
    ],
    "listEmittedFiles": false,
    "listFiles": false,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "outDir": "./lib/mjs",
    "skipLibCheck": true,
    "strict": true,
    "traceResolution": false,
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "module": "CommonJS",
    "target": "ES2020"
  },
  "include": [
    "src/**/*.ts"
  ],
  "compileOnSave": false
}